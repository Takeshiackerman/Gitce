<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        app:srcCompat="@drawable/bnn1" />

    <ImageView
        android:id="@+id/investi"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        app:srcCompat="@drawable/investigar" />

    <TextView
        android:id="@+id/txtinvesti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='"Indagamos para descubrir y producir soluciones tecnológicas."'
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/innovar"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        app:srcCompat="@drawable/innovar" />

    <TextView
        android:id="@+id/txtinoovar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='"Introducimos novedades y cambios, encontrando soluciones y aplicaciones exitosas en el ambiente tecnológico, imponiéndonos a través de la difusión."'
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/crear"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        app:srcCompat="@drawable/crear" />

    <TextView
        android:id="@+id/txtcrear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='"Realizamos y construimos partiendo de las capacidades de nuestro equipo."'
        android:textSize="16sp" />


</LinearLayout>